package ejerciciomodelarobjetos;

public class Alumno {

	private String nombre;
	private String apellidos;
	private String dni;
	private String telefono;
	
	public Alumno(String nombre, String apellidos, String dni, String telefono){
		this.nombre = nombre;
		this.apellidos = apellidos;
		this.dni = dni;
		this.telefono = telefono;
	}
	
	public void llamar(){
		System.out.println(nombre);;
	}
	
	public void llamarCabreado(){
		System.out.println(nombre + " " + apellidos + "!!!");
	}
	
	public String sacarDatos(String campo){
		if (campo == "nombre") {
			return nombre + ". ";
		} else if (campo == "apellidos") {
			return apellidos + ". ";
		} else if (campo == "dni") {
			return dni + ". ";
		} else if (campo == "telefono") {
			return telefono + ". ";
		} else if (campo=="todo"){
			return nombre + " " + apellidos + ". DNI: " + dni + ". Tel√©fono:" + telefono;
		} else {
			return "No has pedido un campo valido";
		}
		
	}
	
}
