
public class Bombilla {

	private boolean encendida = false;
	private boolean rota = false;
	
	public void encender(){
		if (rota == false){
			encendida = true;
		} else {
			System.out.println("La bombilla est치 rota, no se puede encender.");
		}

	}

	public void apagar (){
		if (encendida == true){
			encendida = false;
		} else {
			System.out.println("La bombilla no estaba encendida.");
		}
	}
	
	public void romper(){
		rota = true;
		encendida = false;
	}
	
	public void consultarEstado(){
		if(encendida){
			System.out.println("La bombilla est치 encendida");
		} else if(rota){
			System.out.println("La bombilla est치 rota");
		} else {
			System.out.println("La bombilla est치 apagada");
		}
	}
	
	
}
